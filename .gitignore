                    <input type="tel" name="phone" id="phone" autocomplete="tel" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm p-2">
                </div>
                <div>
                    <label for="message" class="block text-left text-sm font-medium text-gray-700">Tell us about your security needs</label>
                    <textarea id="message" name="message" rows="4" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm p-2"></textarea>
                </div>
                <div>
                    <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-lg font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-300">
                        Send Message
                    </button>
                </div>
            </form>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-800 text-gray-300 py-8">
        <div class="container mx-auto px-4 text-center">
            <p>&copy; 2024 Mitten Shield Security. All rights reserved.</p>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const generateBtn = document.getElementById('generate-package-btn');
            const securityNeedsTextarea = document.getElementById('security-needs');
            const loadingIndicator = document.getElementById('loading-indicator');
            const packageOutputDiv = document.getElementById('package-output');
            const packageContentDiv = document.getElementById('package-content');

            // List of services provided by the company
            const services = {
                'Wireless Camera Installation': ['Indoor & outdoor HD cameras', 'Night vision & motion detection', 'Doorbell cameras with two-way audio', 'Mobile app access from anywhere'],
                'Alarm System Setup': ['Wireless door/window sensors', 'Motion detectors & panic buttons', 'Loud internal sirens', 'Customizable alerts via app'],
                'Smart Home Integration': ['Smart locks with remote control', 'Motion-activated lighting', 'Alexa/Google Assistant integration', 'Automated routines for safety & convenience'],
                '24/7 Monitoring (Optional)': ['Emergency response dispatch', 'Real-time alerts to your phone', 'Add to any package‚Äîno long-term contract'],
                'System Maintenance & Support': ['Battery replacement & equipment checks', 'Software/app updates', 'Fast, local customer support'],
                'Custom Packages': ['Free on-site evaluation', 'Packages for homes, rentals, vacation properties', 'Affordable monthly plans']
            };

            const generatePackage = async () => {
                const userDescription = securityNeedsTextarea.value.trim();

                if (userDescription === '') {
                    packageContentDiv.innerHTML = '<p class="text-red-500">Please describe your security needs to get a recommendation.</p>';
                    packageOutputDiv.classList.remove('hidden');
                    return;
                }

                // Show loading state
                generateBtn.disabled = true;
                loadingIndicator.classList.remove('hidden');
                packageOutputDiv.classList.add('hidden');

                const prompt = `You are an expert security consultant for "Mitten Shield Security". Based on the following customer description, recommend a personalized security package. Be friendly, professional, and use the services we provide. Do not mention that you are an AI or language model. Use the information provided by the customer to tailor a detailed recommendation.

Customer's Description: "${userDescription}"

Services offered by Mitten Shield Security:
${JSON.stringify(services, null, 2)}

Provide a recommendation that includes specific services from our list and explains why they are a good fit for the customer's needs. Format the response as a friendly, professional message.`;

                let chatHistory = [];
                chatHistory.push({ role: "user", parts: [{ text: prompt }] });
                const payload = { contents: chatHistory };
                const apiKey = "";
                const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=${apiKey}`;

                try {
                    const response = await fetch(apiUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    if (!response.ok) {
                        throw new Error(`API error: ${response.statusText}`);
                    }

                    const result = await response.json();

                    if (result.candidates && result.candidates.length > 0 &&
                        result.candidates[0].content && result.candidates[0].content.parts &&
                        result.candidates[0].content.parts.length > 0) {
                        
                        const text = result.candidates[0].content.parts[0].text;
                        // Replace newlines with <br> for HTML display
                        packageContentDiv.innerHTML = text.replace(/\n/g, '<br>');
                        packageOutputDiv.classList.remove('hidden');
                    } else {
                        packageContentDiv.innerHTML = '<p class="text-red-500">Sorry, something went wrong. Please try again later.</p>';
                        packageOutputDiv.classList.remove('hidden');
                    }
                } catch (error) {
                    console.error('Error calling Gemini API:', error);
                    packageContentDiv.innerHTML = `<p class="text-red-500">An error occurred: ${error.message}. Please try again.</p>`;
                    packageOutputDiv.classList.remove('hidden');
                } finally {
                    loadingIndicator.classList.add('hidden');
                    generateBtn.disabled = false;
                }
            };

            generateBtn.addEventListener('click', generatePackage);
        });
    </script>

</body>
</html>
